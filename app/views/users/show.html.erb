<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
        <div class="text-center">
          <%= image_tag @user1.get_profile_image(150, 150) %>
        </div>
        <hr>
        <p><strong>name</strong>: <span class="float-right"><%= @user1.name %></span></p>
        <hr>
        <p><strong>introduction</strong>: <span class="float-right"><%= @user1.introduction %></span></p>
        <%= link_to edit_user_path(@user1.id), class: "btn  btn-block card p-2 mt-3" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>

      <h1>New book</h1>
        <%= form_with model: @booknew do |f| %>
          <div class="form-group">
            <h4>Title</h4>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <h4>Opinion</h4>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <%= f.submit 'Create Book', class: "btn btn-success btn-block" %>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td> <%= link_to user_path(book.user.id), class: "btn  btn-block card " do %>
                <%= image_tag book.user.get_profile_image(100, 100), class: "img-thumbnail" %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id), class: "text-decoration-none text-primary" %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
