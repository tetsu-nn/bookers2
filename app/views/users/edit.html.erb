<div class="container mt-4">
  <h2>User info</h2>
    <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @user, local: true do |f| %>
        <h4>Name</h4>
        <%= f.text_field :name, class: "form-control" %>
      <div class="form-group">
        <h4>Image</h4>
        <%= f.file_field :profile_image, class: "form-control-file" %>
      </div>
      <div class="form-group">
        <h4>Introduction</h4>
        <%= f.text_area :introduction, class: "form-control", rows: 4 %>
      </div>
      <%= f.submit "Update User", class: "btn btn-primary mt-3" %>
    <% end %>
</div>
