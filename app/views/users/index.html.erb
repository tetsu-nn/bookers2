<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <div class="text-center">
        <%= image_tag @user.get_profile_image(150, 150), class: "img-thumbnail" %>
      </div>
      <hr>
      <p><strong>name</strong>: <span class="float-right"><%= @user.name %></span></p>
      <hr>
      <p><strong>introduction</strong>: <span class="float-right"><%= @user.introduction %></span></p>
      <%= link_to edit_user_path(@user.id), class: "btn btn-block card p-2 mt-3" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>

      <h1>New book</h1>
      <%= form_with model: @booknew do |f| %>
        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <%= f.submit 'Create Book', class: "btn btn-success btn-block" %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100), class: "img-thumbnail" %></td>
              <td><%= user.name %></td>
              <td>
                <%= link_to 'Show', user_path(user.id), class: 'btn btn-primary btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
